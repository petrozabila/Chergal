<%= will_paginate %>
<div class='row'>
    <% @pics.each do |pic| %>
      <div class="col-sm-12 col-md-4">
          <div class="thumbnail">
            <% if (pic.image).blank?  %>
            <%= image_tag('blank.gif', style:'max-width:300px; max-height:300px') %>
            <% else %>
                <%= link_to image_tag(pic.image, style:'max-width:300px; max-height:300px' ), pic %>
            <% end %>

            <div class="caption">
              <%= link_to pic.title, pic %><hr>
              <p><%= sanitize( truncate pic.description, length: 101) %></p>
              <%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
      </div>
            <% end %>
            </div>

